<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_draw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zuodong.androiddesignpatterns.ChapterEleven.DrawActivity">

    <com.zuodong.androiddesignpatterns.ChapterEleven.DrawCanvas
        android:id="@+id/draw_canvas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/red_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="红色"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/green_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="绿色"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/blue_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="蓝色"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/normal_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="普通笔刷"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/circle_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="圆形笔刷"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/undo_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="撤销"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/redo_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="重做"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
